package entities;

public class Student {
	
	public String name;
	public double notaA;
	public double notaB;
	public double notaC;
	public String check;
	
	public double media() {
		return notaA + notaB + notaC;
	}
	
	public void passOrFailed() {
		if(media() > 60) {
			check = "PASS";
		} else {
			double missing = 60 - media();
			check = "FAILED\n"
					+ "MISSING: "
					+ String.format("%.2f", missing)
					+ " POINTS";
		}
	}
	
	public String toString() {
		return "FINAL GRADE = "
				+String.format("%.2f%n", media())
				+ String.format("%s", check);
	}

}
